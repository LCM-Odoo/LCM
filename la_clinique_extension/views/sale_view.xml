<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <!-- Sale View Inherit -->

    <record id="view_sale_form_inherit" model="ir.ui.view">
        <field name="name">sale.form.view.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <field name="tag_ids" position="after">
                <field name="create_api_values" readonly="1"/>
                <field name="make_so_readonly" groups="base.group_erp_manager"/>
            </field>

            <field name="payment_term_id" position="after">
                <field name="insurance_provider_id" readonly="1"/>
                <field name="agreed_amount" readonly="1"/>
                <field name="actual_paid" readonly="1"/>
            </field>

            <xpath expr="//field[@name='order_line']" position="attributes">
                <attribute name="attrs">{'readonly': ['|',('state', 'in', ('done','cancel')),('make_so_readonly','=',True)]}</attribute>
            </xpath>

        </field>
    </record>

</odoo>
