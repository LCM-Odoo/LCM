<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <!-- Sale View Inherit -->

    <record id="view_sale_form_inherit" model="ir.ui.view">
        <field name="name">sale.form.view.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <button name="action_cancel" position="after">
                <button name="create_payment" icon="fa-money" string="Create Payment" invisible="1" type="object" class="oe_stat_button"/>
            </button>

            <field name="tag_ids" position="after">
                <field name="create_api_values" readonly="1" groups="base.group_no_one"/>
                <field name="make_so_readonly" groups="base.group_no_one"/>
            </field>

            <field name="tag_ids" position="after">
                <field name="create_api_values" readonly="1" groups="base.group_no_one"/>
                <field name="make_so_readonly" groups="base.group_no_one"/>
            </field>

            <field name="partner_id" position="after">
                <field name="patient_type"/>
                <field name="moc_doc_ref" attrs="{'readonly': [('state', 'in',('done','sale'))]}"/>
                <field name="sale_bill_amount" readonly="1"/>
                <field name="sale_bill_type" readonly="1"/>
                <field name="sale_bill_currency" readonly="1"/>
                <field name="is_payment_created" readonly="1"/>
            </field>

            <field name="payment_term_id" position="after">
                <field name="insurance_provider_id" attrs="{'readonly': [('state', 'in',('done','sale'))]}"/>
                <field name="agreed_amount" attrs="{'readonly': [('state', 'in',('done','sale'))]}"/>
                <field name="actual_paid" attrs="{'readonly': [('state', 'in',('done','sale'))]}"/>
            </field>

            <xpath expr="//notebook/page[1]/field/tree/field[@name='name']" position="after">
                <field name="moc_doc_location_id" readonly="1"/>
            </xpath>
            
            <xpath expr="//field[@name='order_line']" position="attributes">
                <attribute name="attrs">{'readonly': ['|',('state', 'in', ('done','cancel')),('make_so_readonly','=',True)]}</attribute>
            </xpath>
        </field>
    </record>


    <record id="view_stock_form_inherit" model="ir.ui.view">
        <field name="name">picking.form.view.inherit</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <field name="origin" position="after">
                <field name="is_from_api" readonly="1" groups="base.group_no_one"/>
                <field name="is_int_api" readonly="1" groups="base.group_no_one"/>
            </field>
             <field name="user_id" position="after">
                <field name="moc_doc_ref" readonly="1"/>
                <field name="create_api_values" readonly="1" groups="base.group_no_one"/>
            </field>
            <xpath expr="//notebook/page[2]/field/tree/field[@name='product_uom_qty']" position="after">
               <field name="move_moc_doc_location_id" readonly="0" attrs="{'column_invisible': [('parent.is_from_api', '!=',True)]}"/>
            </xpath>
        </field>
    </record>

    <record id="view_stock_move_line_detailed_tree_inherit" model="ir.ui.view">
        <field name="name">detailed.view.inherit</field>
        <field name="model">stock.move.line</field>
        <field name="inherit_id" ref="stock.view_stock_move_line_detailed_operation_tree"/>
        <field name="arch" type="xml">
             <field name="product_id" position="after">
                <field name="move_line_moc_doc_location_id"/>
            </field>
        </field>
    </record>

</odoo>
