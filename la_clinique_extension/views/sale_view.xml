<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <!-- Sale View Inherit -->

    <record id="view_sale_form_inherit" model="ir.ui.view">
        <field name="name">sale.form.view.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <button name="action_cancel" position="after">
                <button name="create_payment" icon="fa-money" string="Create Payment" invisible="1" type="object" class="oe_stat_button"/>
            </button>

            <field name="tag_ids" position="after">
                <field name="create_api_values" readonly="1" groups="base.group_no_one"/>
                <field name="make_so_readonly" groups="base.group_no_one"/>
            </field>

            <field name="partner_id" position="after">
                <field name="patient_type" attrs="{'readonly': [('state', 'in',('done','sale'))]}"/>
                <field name="moc_doc_ref" attrs="{'readonly': [('state', 'in',('done','sale'))]}"/>
                <field name="sale_bill_amount" readonly="1"/>
                <field name="sale_bill_type" readonly="1"/>
                <field name="sale_bill_currency" readonly="1"/>
                <field name="is_payment_created" readonly="1"/>
            </field>

            <field name="payment_term_id" position="after">
                <field name="insurance_provider_id" attrs="{'readonly': [('state', 'in',('done','sale'))]}"/>
                <field name="agreed_amount" attrs="{'readonly': [('state', 'in',('done','sale'))]}"/>
                <field name="actual_paid" attrs="{'readonly': [('state', 'in',('done','sale'))]}"/>
            </field>

            <xpath expr="//notebook/page[1]/field/tree/field[@name='name']" position="after">
                <field name="moc_doc_location_id" readonly="1"/>
            </xpath>

            <xpath expr="//field[@name='order_line']" position="attributes">
                <attribute name="attrs">{'readonly': ['|',('state', 'in', ('done','cancel')),('make_so_readonly','=',True)]}</attribute>
            </xpath>

            
        </field>
    </record>


    <!-- Quotation - List view inherit -->
    <record id="view_quotation_tree_inheirt" model="ir.ui.view">
        <field name="name">sale.quotation.tree.view.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_quotation_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <field name="moc_doc_ref"/>
            </xpath>
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="patient_type"/>
            </xpath>
        </field>
    </record>

    <!-- Sale order - List view inherit -->
    <record id="view_sale_tree_inherit" model="ir.ui.view">
        <field name="name">sale.tree.view.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <field name="moc_doc_ref"/>
            </xpath>
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="patient_type"/>
            </xpath>
        </field>
    </record>

    <!-- Sale order - Search view inherit -->
    <record id="view_sales_order_filter_inheirt" model="ir.ui.view">
        <field name="name">sale.order.search.view.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_sales_order_filter"/>
        <field name="arch" type="xml">
            <xpath expr="//search" type="inside">
                <field name="moc_doc_ref"/>
            </xpath>
        </field>
    </record>

    <record id="view_stock_form_inherit" model="ir.ui.view">
        <field name="name">picking.form.view.inherit</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <field name="origin" position="after">
                <field name="is_from_api" readonly="1" groups="base.group_no_one"/>
                <field name="is_int_api" readonly="1" groups="base.group_no_one"/>
            </field>
             <field name="user_id" position="after">
                <field name="moc_doc_ref" readonly="1"/>
                <field name="create_api_values" readonly="1" groups="base.group_no_one"/>
            </field>
            <xpath expr="//notebook/page[2]/field/tree/field[@name='product_uom_qty']" position="after">
               <field name="move_moc_doc_location_id" readonly="0" attrs="{'column_invisible': [('parent.is_from_api', '!=',True)]}"/>
            </xpath>
        </field>
    </record>

    <record id="view_stock_move_line_detailed_tree_inherit" model="ir.ui.view">
        <field name="name">detailed.view.inherit</field>
        <field name="model">stock.move.line</field>
        <field name="inherit_id" ref="stock.view_stock_move_line_detailed_operation_tree"/>
        <field name="arch" type="xml">
             <field name="product_id" position="after">
                <field name="move_line_moc_doc_location_id"/>
            </field>
        </field>
    </record>   


     <record id="view_order_line_tree_new" model="ir.ui.view">
            <field name="name">sale.order.line.tree new</field>
            <field name="model">sale.order.line</field>
            <field name="arch" type="xml">
                <tree string="Sales Order Lines" create="false">
                    <field name="order_id"/>
                    <field name="order_partner_id"/>
                    <field name="name"/>
                    <field name="salesman_id"/>
                    <field name="product_uom_qty" string="Qty"/>
                    <field name="qty_delivered"/>
                    <field name="qty_invoiced"/>
                    <field name="qty_to_invoice"/>
                    <field name="product_uom" string="Unit of Measure" groups="uom.group_uom"/>
                    <field name="price_subtotal" sum="Total" widget="monetary"/>
                    <field name="currency_id" invisible="1"/>
                </tree>
            </field>
        </record>

        <record id="sale_order_line_view_form_readonly_new" model="ir.ui.view">
            <field name="name">sale.order.line.form.readonly new</field>
            <field name="model">sale.order.line</field>
            <field name="arch" type="xml">
                <form string="Sales Order Item">
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="display_name" readonly="1"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="order_id" readonly="1"/>
                                <field name="product_id" readonly="1"/>
                                <field name="name" readonly="1"/>
                                <field name="product_uom_qty" readonly="1"/>
                                <field name="qty_delivered" readonly="1"/>
                                <field name="qty_invoiced"/>
                                <field name="product_uom" readonly="1"/>
                                <field name="company_id" options="{'no_create': True}" groups="base.group_multi_company"/>
                                <field name="order_partner_id" invisible="1"/>
                                <field name="display_type" invisible="1"/>
                                <field name="product_updatable" invisible="1"/>
                            </group>
                            <group>
                                <field name="price_unit" readonly="1"/>
                                <field name="discount" groups="product.group_discount_per_so_line" readonly="1"/>
                                <field name="price_subtotal" widget="monetary"/>
                                <field name="tax_id" widget="many2many_tags" readonly="1"/>
                                <field name="price_tax" widget="monetary"/>
                                <field name="price_total" widget="monetary"/>
                                <field name="currency_id" invisible="1"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>


        <record id="action_sale_order_line_view" model="ir.actions.act_window">
            <field name="name">Sale Order Line</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">sale.order.line</field>
            <field name="view_id" ref="view_order_line_tree_new"/>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem 
            id="sale_order_line_new"
            name="Sale Order Line"
            parent="sale.sale_order_menu"
            action="action_sale_order_line_view"
            sequence="5"/>


</odoo>
