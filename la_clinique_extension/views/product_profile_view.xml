<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record model="ir.ui.view" id="product_profile_form_view">
        <field name="name">Product Profile Form</field>
        <field name="model">product.profile</field>
        <field name="arch" type="xml">
            <form>
                <header>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name" required="1"/>
                        </group>
                        <group>
                            <field name="code" required="1"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="bin_location_tree_view">
        <field name="name">Product Profile Tree</field>
        <field name="model">product.profile</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" required="1"/>
                <field name="code" required="1"/>
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="product_profile_action">
        <field name="name">Product Profile</field>
        <field name="res_model">product.profile</field>
        <field name="view_mode">tree,form</field>
        <!-- <field name="search_view_id" ref="view_printing_lccation_filter"/> -->
    </record>


    <menuitem 
        id="product_profile"
        name="Product Profile"
        parent="sale.product_menu_catalog"
        action="product_profile_action"
        sequence="4"/>

</odoo>
