<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record model="ir.ui.view" id="insurance_provider_form_view">
        <field name="name">Insurance Provider Form</field>
        <field name="model">insurance.provider</field>
        <field name="arch" type="xml">
            <form>
                <header>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name" required="1"/>
                        </group>
                        <group>
                            <field name="code"/>
                            <field name="active" invisible="1"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="insurance_provider_tree_view">
        <field name="name">Insurance Provider Tree</field>
        <field name="model">insurance.provider</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" required="1"/>
                <field name="code"/>
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="insurance_provider_action">
        <field name="name">Insurance Provider</field>
        <field name="res_model">insurance.provider</field>
        <field name="view_mode">tree,form</field>
        <!-- <field name="search_view_id" ref="view_printing_lccation_filter"/> -->
    </record>


    <menuitem 
        id="insurance_provider"
        name="Insurance Provider"
        parent="sale.sale_order_menu"
        action="insurance_provider_action"
        sequence="5"/>

</odoo>
