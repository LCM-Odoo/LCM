<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record model="ir.ui.view" id="bin_location_form_view">
        <field name="name">Bin Location Form</field>
        <field name="model">bin.location</field>
        <field name="arch" type="xml">
            <form>
                <header>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name" required="1"/>
                        </group>
                        <group>
                            <field name="code" required="1"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="bin_location_tree_view">
        <field name="name">Bin Location Tree</field>
        <field name="model">bin.location</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" required="1"/>
                <field name="code" required="1"/>
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="bin_location_action">
        <field name="name">Bin Location</field>
        <field name="res_model">bin.location</field>
        <field name="view_mode">tree,form</field>
        <!-- <field name="search_view_id" ref="view_printing_lccation_filter"/> -->
    </record>


    <menuitem 
        id="bin_location"
        name="Bin Location"
        parent="sale.product_menu_catalog"
        action="bin_location_action"
        sequence="3"/>

</odoo>
