<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <!-- Invoice View Inherit -->

    <record id="view_invoice_form_inherit" model="ir.ui.view">
        <field name="name">invoice.form.view.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <field name="payment_reference" position="after">
                <field name="inv_insurance_provider_id" readonly="1"/>
                <field name="inv_agreed_amount" readonly="0"/>
                <field name="inv_actual_paid" readonly="0"/>
            </field>
            <xpath expr="//div[@class='oe_title']" position="after">
                <div class="oe_title">
                    <span class="o_form_label" attrs="{'invisible': [('inv_moc_doc_ref', '=', False)]}">Moc Doc Ref</span>
                     <h1 class="mt0">
                        <field name="inv_moc_doc_ref" readonly="1"/>
                    </h1>
                </div>
            </xpath>
            <xpath expr="//notebook/page[1]/field/tree/field[@name='account_id']" position="after">
                <field name="moc_doc_ref" readonly="1"/>
            </xpath>
        </field>
    </record>


    <record id="view_audit_tree_inherit" model="ir.ui.view">
        <field name="name">audit.tree.view.inherit</field>
        <field name="model">account.move.line</field>
        <field name="inherit_id" ref="account.view_move_line_tax_audit_tree"/>
        <field name="arch" type="xml">
            <field name="move_id" position="after">
                <field name="moc_doc_ref" readonly="1"/>
            </field>
        </field>
    </record>
    
</odoo>
